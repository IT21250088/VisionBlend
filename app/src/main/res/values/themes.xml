<resources>
    <!-- Default Theme -->
    <style name="Theme.VisionBlend" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#38B11E</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="buttonColor">@color/buttonColorDefault</item>
        <item name="backgroundColor">@color/backgroundColorDefault</item>
    </style>

    <!-- Button style -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/buttonColorDefault</item>
        <item name="android:textColor">@color/defaultTextColor</item>
    </style>

    <!-- Theme for Monochromatism -->
    <style name="Theme.VisionBlend.Monochromatism" parent="Theme.VisionBlend">
        <item name="colorPrimary">@color/colorPrimaryMono</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkMono</item>
        <item name="colorAccent">@color/colorAccentMono</item>
        <item name="android:textColor">@color/monoTextColor</item>
        <item name="android:buttonStyle">@style/ButtonStyleMono</item>
        <item name="buttonColor">@color/buttonColorMono</item>
        <item name="backgroundColor">@color/backgroundColorMono</item>
        <item name="android:windowBackground">@color/backgroundColorMono</item>

    </style>

    <!-- Button style for Monochromatism -->
    <style name="ButtonStyleMono" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/buttonColorMono</item>
        <item name="android:textColor">@color/monoTextColor</item>
    </style>

    <!-- Theme for Tritanopia -->
    <style name="Theme.VisionBlend.Tritanopia" parent="Theme.VisionBlend">
        <item name="colorPrimary">@color/colorPrimaryTritan</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkTritan</item>
        <item name="colorAccent">@color/colorAccentTritan</item>
        <item name="android:textColor">@color/tritanTextColor</item>
        <item name="android:buttonStyle">@style/ButtonStyleTritan</item>
        <item name="buttonColor">@color/buttonColorTritan</item>
        <item name="backgroundColor">@color/backgroundColorTritan</item>
        <item name="android:windowBackground">@color/backgroundColorTritan</item>
    </style>

    <!-- Button style for Tritanopia -->
    <style name="ButtonStyleTritan" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/buttonColorTritan</item>
        <item name="android:textColor">@color/tritanTextColor</item>
    </style>

    <!-- Theme for Deuteranopia and Protanopia -->
    <style name="Theme.VisionBlend.Deuteranopia" parent="Theme.VisionBlend">
        <item name="colorPrimary">@color/colorPrimaryDeuteran</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDeuteran</item>
        <item name="colorAccent">@color/colorAccentDeuteran</item>
        <item name="android:textColor">@color/deuteranTextColor</item>
        <item name="android:buttonStyle">@style/ButtonStyleDeuteran</item>
        <item name="buttonColor">@color/buttonColorDeuteran</item>
        <item name="android:windowBackground">@color/backgroundColorDeuteran</item>
    </style>

    <!-- Button style for Deuteranopia and Protanopia -->
    <style name="ButtonStyleDeuteran" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/buttonColorDeuteran</item>
        <item name="android:textColor">@color/deuteranTextColor</item>
    </style>
</resources>